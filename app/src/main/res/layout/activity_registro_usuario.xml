<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegistroUsuario">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/qhatumovilim" />
    </LinearLayout>

    <TextView
        android:id="@+id/titlesubasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Qhatu Subasta"
        android:textColor="@color/color_texto"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Bienvenido aqui puedes registrarte"
        android:textColor="@color/color_texto"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="355dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nombreRegistro"
            android:layout_width="300dp"
            android:layout_height="37dp"
            android:hint="Nombres"
            android:background="@drawable/edt"
            android:elevation="2dp"
            android:textSize="18sp"
           />

        <EditText
            android:id="@+id/apellidoRegistro"
            android:layout_width="300dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:hint="Apellido"
            android:background="@drawable/edt"
            android:elevation="2dp"
            android:textSize="18sp"
         />

        <EditText
            android:id="@+id/emailRegistro"
            android:layout_width="300dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:background="@drawable/edt"
            android:elevation="2dp"
            android:textSize="18sp"
          />

        <EditText
            android:id="@+id/passwordRegistro"
            android:layout_width="300dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:background="@drawable/edt"
            android:elevation="2dp"
            android:textSize="18sp"
           />

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:backgroundTint="@color/color_texto"
            android:layout_marginTop="40dp"
            android:text="Registrarse"
            />
    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>