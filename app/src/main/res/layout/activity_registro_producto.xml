<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegistroProducto">
    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="678dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/color_fondo">


        <TextView
            android:id="@+id/txtTituloProducto"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:text="Puplicar Producto"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/txtFotoProducto"
                android:layout_width="330dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Foto del producto"
                android:textColor="@color/color_texto"
                android:textSize="18dp"
                />

            <ImageButton
                android:layout_marginTop="5dp"
                android:id="@+id/img_subirencont"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/upload_img"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="220dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDescripcionProducto"
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Descripción del producto"
                android:textColor="@color/color_texto"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edtDescripcionProducto"
                android:layout_width="330dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/edt"
                android:gravity="center"
                android:hint="Descripción" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="330dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txtNombreProducto"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Nombre"
                android:textColor="@color/color_texto"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edtNombreProducto"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Nombre del producto"
                android:background="@drawable/edt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="400dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txtFechainicioProducto"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Fecha De Inicio"
                android:textColor="@color/color_texto"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/edtFechainicioProducto"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Fecha De Inicio"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:background="@drawable/edt"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="470dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txtFechacierreProducto"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Fecha De Cierre"
                android:textColor="@color/color_texto"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edtFechacierreProducto"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/edt"
                android:gravity="center"
                android:hint="Fecha De Cierre"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:ems="10"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="540dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txtOferteProducto"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Oferta Inicial"
                android:textColor="@color/color_texto"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edtOferteProducto"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Oferta Inicial"
                android:background="@drawable/edt"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnPublicarProducto"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:background="@drawable/botones"
            android:text="Publicar" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/Bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_borde"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="35dp">
        <ImageButton
            android:id="@+id/imgbHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            android:background="@drawable/icono"
            android:layout_marginRight="80dp" />

        <ImageButton
            android:id="@+id/imgbFavoritos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/love"
            android:background="@drawable/icono"
            android:layout_marginRight="80dp"/>

        <ImageButton
            android:id="@+id/imgbPerfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usuario"
            android:background="@drawable/icono" />


    </LinearLayout>

</LinearLayout>