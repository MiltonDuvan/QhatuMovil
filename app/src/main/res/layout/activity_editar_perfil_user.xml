<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".EditarPerfilUser">
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/qhatumovilim" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="355dp"
        android:layout_height="415dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txttitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Editar Perfil"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textColor="@color/color_texto"/>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtnombre"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="Nombre"
                    android:textSize="18dp"
                    android:textColor="@color/color_texto"/>

                <EditText
                    android:id="@+id/edtnombre"
                    android:layout_width="187dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edt"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="Apellido"
                    android:textSize="18dp"
                    android:textColor="@color/color_texto" />

                <EditText
                    android:id="@+id/edtapellido"
                    android:layout_width="187dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edt"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/black" />

            </LinearLayout>


            <Button
                android:id="@+id/btnguardarcambios"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/color_texto"
                android:text="Guardar" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/Bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_borde"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp">
        <ImageButton
            android:id="@+id/imgbHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            android:background="@drawable/icono"
            android:layout_marginRight="80dp" />

        <ImageButton
            android:id="@+id/imgbFavoritos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/love"
            android:background="@drawable/icono"
            android:layout_marginRight="80dp"/>

        <ImageButton
            android:id="@+id/imgbPerfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usuario"
            android:background="@drawable/icono" />


    </LinearLayout>

</LinearLayout>