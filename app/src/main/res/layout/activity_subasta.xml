<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Subasta">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/color_borde">
        <ImageButton
            android:id="@+id/buscar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lupa"
            android:background="@drawable/icono"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/edtbuscar"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edt"/>

        <ImageButton
            android:id="@+id/imgbNotificaciones"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/campana"
            android:background="@drawable/icono"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="365dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/color_fondo">
            <TextView
                android:id="@+id/txtNombreSubasta"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Nombre del producto"
                android:textColor="@color/color_texto"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imgSubasta"
                android:layout_width="260dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/txtDescripcionSubasta"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="260dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:text="ewtzzcxzgvsggsgsgcgczghzgh"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="530dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Hora De Cierre"
                    android:textColor="@color/color_texto"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/txtHoraSubasta"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Hora"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="370dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Fecha De Inicio"
                    android:textColor="@color/color_texto"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/txtFechaInicioSubasta"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Fecha Inicial"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="450dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Fecha De Cierre"
                    android:textColor="@color/color_texto"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/txtFechaFinSubasta"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Fecha de cierre"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="610dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Valor Inicial"
                    android:textColor="@color/color_texto"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/txtValorSubasta"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="15820"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Ofertas Recientes"
                android:layout_marginTop="690dp"
                android:textColor="@color/color_texto"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

             <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="720dp"
                android:orientation="vertical">
                     <ListView
                         android:id="@+id/listaChat"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:divider="@null">
                     </ListView>
             </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="920dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:paddingRight="50dp">
                <EditText
                    android:id="@+id/edtComentarOferta"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edt"
                    android:layout_marginRight="30dp"
                    android:elevation="2dp"
                    android:paddingLeft="10dp"
                    android:hint="Hacer Oferta"/>
                <Button
                    android:id="@+id/btnComentarOferta"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mensaje"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/Bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_borde"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom">
        <ImageButton
            android:id="@+id/imgbHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            android:background="@drawable/icono"
            android:layout_marginRight="80dp" />

        <ImageButton
            android:id="@+id/imgbFavoritos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/love"
            android:background="@drawable/icono"
            android:layout_marginRight="80dp"/>

        <ImageButton
            android:id="@+id/imgbPerfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usuario"
            android:background="@drawable/icono" />


    </LinearLayout>

</LinearLayout>