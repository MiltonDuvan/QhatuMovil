<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@drawable/fondoinicio"
        android:elevation="15dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="12dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/borde"/>

        <ImageView
            android:id="@+id/imgCarta"
            android:layout_width="128dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:gravity="end"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imgFovoritos"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/estrella"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:id="@+id/imgCompartir"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/compartir" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:layout_marginTop="145dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
        <TextView
            android:id="@+id/txtDescripcionCarta"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:text="Descripcion del producto segun essta en fire base"
           />
        <TextView
            android:layout_width="130dp"
            android:layout_height="10dp"
            android:background="@drawable/linea" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="218dp"
            android:gravity="center">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="Valor"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtValorCarta"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="$78000"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>